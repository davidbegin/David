<div class="blog_wrapper">
	<div class="large-2 columns pic_and_time">
		<%= image_tag @blog.pic.url(:thumb) %>
		<div class="time"><%= @blog.time %></div>
	</div>

	<div class="large-10 columns blog">
		<h3><%= link_to @blog.title, @blog %></h3>
	</div>

	<div class="large-10 columns large-centered body">
		<%= markdown @blog.body %>
	</div>
	<hr />
<div>

<% if admin_signed_in? %>
	<%= link_to 'Edit', edit_blog_path(@blog), class: 'button' %>
	<%= link_to 'Destroy', blog_path, method: :delete, class: 'button' %>
<% end %>
